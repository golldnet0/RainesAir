<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_customer_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ariad.rainesair.PartsViewDetailsActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#303F9F">

            <ImageView
                android:id="@+id/partsView_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:src="@drawable/back"

                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"

                android:text="@string/part_detail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#fff"
                android:layout_alignBottom="@+id/partsView_back"
                android:layout_toRightOf="@+id/partsView_back"
                android:layout_toEndOf="@+id/partsView_back" />


        </RelativeLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_parts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.ariad.rainesair.PartsViewDetailsActivity"
            >


            <EditText
                android:id="@+id/partsView_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/partnum"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="35dp"
                android:textColor="#000"
                />


            <EditText
                android:id="@+id/partsView_serialnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/serialnumber"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                />


            <EditText
                android:id="@+id/partsView_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                />


            <Spinner
                android:id="@+id/partsView_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/condition"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:entries="@array/condition_for_parts"
                />


            <EditText
                android:id="@+id/partsView_trace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/trace"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                />


            <EditText
                android:id="@+id/partsView_tagby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/tagby"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                />


            <EditText
                android:id="@+id/partsView_tagdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/tagdate"
                android:inputType="datetime"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                />



            <EditText
                android:id="@+id/partsView_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/comments"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                />


            <Button
                android:id="@+id/partsView_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                android:text="@string/update"

                />

            <Button
                android:id="@+id/partsView_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:text="@string/publish"

                />




        </LinearLayout>

    </LinearLayout>

</ScrollView>
